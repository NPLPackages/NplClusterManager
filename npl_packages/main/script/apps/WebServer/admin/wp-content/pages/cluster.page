	local nMaxFilesNum = tonumber(request:get("max_files_num"));
	local output = GitUploader:LoadFiles_(world_dir,curPath,filter,nMaxFileLevels,nMaxFilesNum);
	wp_send_json(output, true);
  end)
  return;
end

